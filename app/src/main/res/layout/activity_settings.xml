<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".settings"
    android:background="#E5E5E5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E5E5E5">

        <TextView
            android:id="@+id/settingsTitle"
            style="@style/HeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:onClick="onSettingsReturn"
            android:text="S E T T I N G S"
            app:fontFamily="@font/roboto" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nameEditor"
                style="@style/SettingsText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onClickName"
                android:text="Name"
                app:fontFamily="@font/roboto" />

            <TextView
                android:id="@+id/inputtedName"
                style="@style/SettingsText"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:onClick="onClickName"
                android:gravity="right"
                android:textSize="16dp"
                app:fontFamily="@font/roboto" />
        </LinearLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#F4F1ED" />

        <Switch
            android:id="@+id/musicSwitch"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Music"
            android:thumbTint="#A0C172"
            android:trackTint="#C9D8A7"
            app:fontFamily="@font/roboto" />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#F4F1ED" />

        <Switch
            android:id="@+id/soundSwitch"
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sound"
            android:checked="true"
            android:thumbTint="#A0C172"
            android:trackTint="#C9D8A7"
            app:fontFamily="@font/roboto"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#F4F1ED" />

        <TextView
            android:id="@+id/credits"
            style="@style/SettingsText"
            android:onClick="onClickCredits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Credits"
            app:fontFamily="@font/roboto"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>